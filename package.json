{
  "name": "hono-i18n",
  "type": "module",
  "description": "Functionality for implementing internationalization in Hono. With first-class TypeScript support, it ensures type safety and seamless integration, making it easier to manage and implement translations across different languages.",
  "engines": {
    "node": ">=24.0.0 <25.0.0",
    "pnpm": ">= 10.0.0 <11.0.0"
  },
  "packageManager": "pnpm@10.13.1",
  "private": false,
  "author": "Serhat Mutlu",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      },
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/serhat-m/hono-i18n.git"
  },
  "scripts": {
    "test": "vitest --run --reporter verbose",
    "lint:staged": "lint-staged",
    "lint": "tsc -p tsconfig.json && biome check .",
    "lint:fix": "biome check --write .",
    "build": "node build.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "core-i18n": "1.1.9"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@types/node": "24.0.13",
    "hono": "4.8.4",
    "husky": "9.1.7",
    "lint-staged": "16.1.2",
    "tsup": "8.5.0",
    "typescript": "5.8.3",
    "vitest": "3.2.4"
  },
  "keywords": [
    "hono",
    "hono-i18n",
    "i18n",
    "intl",
    "international",
    "internationalization",
    "placeholder",
    "plural",
    "pluralization",
    "locale",
    "localization",
    "localize",
    "translations",
    "translate",
    "language"
  ],
  "version": "1.1.1"
}
