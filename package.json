{
  "name": "hono-i18n",
  "type": "module",
  "description": "Functionality for implementing internationalization in Hono. With first-class TypeScript support, it ensures type safety and seamless integration, making it easier to manage and implement translations across different languages.",
  "packageManager": "pnpm@10.28.1",
  "private": false,
  "author": "Serhat Mutlu",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      },
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/serhat-m/hono-i18n.git"
  },
  "scripts": {
    "test": "vitest --run --reporter verbose",
    "lint:staged": "lint-staged",
    "lint": "tsc -p tsconfig.json && biome check .",
    "lint:fix": "biome check --write .",
    "build": "node build.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "core-i18n": "1.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@types/node": "25.0.9",
    "hono": "4.11.4",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "vitest": "4.0.17"
  },
  "keywords": [
    "hono",
    "hono-i18n",
    "i18n",
    "intl",
    "international",
    "internationalization",
    "placeholder",
    "plural",
    "pluralization",
    "locale",
    "localization",
    "localize",
    "translations",
    "translate",
    "language"
  ],
  "version": "1.1.2"
}
